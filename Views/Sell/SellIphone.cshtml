@* Views/Sell/SellIphone.cshtml *@
@{
    ViewData["Title"] = "Sell My iPhone - Like Zone Mobile Shop";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sell My iPhone - Like Zone Mobile Shop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .iphone-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            transition: 0.3s;
            margin-bottom: 15px;
        }
        .iphone-card:hover {
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }
        .iphone-card img {
            max-width: 100px;
            height: auto;
            margin-bottom: 10px;
        }
        .iphone-card h5 {
            font-size: 1rem;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h2 class="text-center">Sell My iPhone</h2>
        <p class="text-center">Select your iPhone model to sell and get the highest cash offer.</p>

        <!-- Search Bar -->
        <div class="input-group mb-4">
            <input type="text" class="form-control" placeholder="Search your iPhone model..." aria-label="Search iPhone">
            <button class="btn btn-primary" type="button">Search</button>
        </div>

        <div class="text-center mb-3">
            <p>Can’t find your device? <a href="#">Click here</a></p>
        </div>

        <!-- iPhone Models -->
        <div class="row">
            @foreach (var iphone in new (string, int)[] {
            ("iPhone 16e", 390), ("iPhone 16 Pro Max", 871), ("iPhone 16 Pro", 769), ("iPhone 16 Plus", 558), ("iPhone 16", 480),
            ("iPhone 15 Pro Max", 696), ("iPhone 15 Pro", 560), ("iPhone 15 Plus", 450), ("iPhone 15", 412),
            ("iPhone 14 Pro Max", 524), ("iPhone 14 Pro", 419), ("iPhone 14 Plus", 334), ("iPhone 14", 318),
            ("iPhone SE 3rd Gen (2022)", 125), ("iPhone 13 Pro Max", 379), ("iPhone 13 Pro", 335), ("iPhone 13", 264),
            ("iPhone 13 mini", 238), ("iPhone 12 Pro Max", 280), ("iPhone 12 Pro", 224), ("iPhone 12", 180), ("iPhone 12 mini", 151),
            ("iPhone SE 2nd Gen (2020)", 63), ("iPhone 11 Pro Max", 197), ("iPhone 11 Pro", 203), ("iPhone 11", 137),
            ("iPhone XS Max", 142), ("iPhone XS", 94), ("iPhone XR", 91), ("iPhone X", 81), ("iPhone 8 Plus", 67),
            ("iPhone 8", 33), ("iPhone 7 Plus", 34), ("iPhone 7", 19), ("iPhone 6s Plus", 8), ("iPhone 6s", 4),
            ("iPhone 6 Plus", 0), ("iPhone 6", 0), ("iPhone SE 1st Gen", 2)
            })
            {
                <div class="col-md-3">
                    <div class="iphone-card">
                        <img src="iphone_logo.png" alt="@iphone.Item1">
                        <h5>@iphone.Item1</h5>
                        <p>Up to $@iphone.Item2</p>
                        <a href="#" class="btn btn-primary btn-sm">Start Selling</a>
                    </div>
                </div>
            }
        </div>

        <!-- FAQ Section -->
        <div class="mt-5">
            <h3>FAQs & Tips When Selling Your iPhone Online</h3>
            <div class="accordion" id="faqAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                            How do I sell my iPhone online?
                        </button>
                    </h2>
                    <div id="faq1" class="accordion-collapse collapse show">
                        <div class="accordion-body">
                            Selling your iPhone online is simple! Select your model, get an instant quote, package it securely, and ship it for free. Your payment will be processed quickly.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                            What iPhone model do I have?
                        </button>
                    </h2>
                    <div id="faq2" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            You can check your iPhone model under **Settings > General > About** or by checking the back of the device.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                            How fast do I get paid for my iPhone?
                        </button>
                    </h2>
                    <div id="faq3" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            Payments are processed within **24-48 hours** after receiving and inspecting your iPhone.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                            When should I sell my iPhone?
                        </button>
                    </h2>
                    <div id="faq4" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            It's best to sell your iPhone **before a new model launches** to get the highest value.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq5">
                            Can I sell iPhones in bulk?
                        </button>
                    </h2>
                    <div id="faq5" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            Yes! We accept bulk sales of iPhones. Contact us for special pricing and processing.
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Support -->
        <div class="text-center mt-4">
            <p>Still have questions? <a href="#">Contact Support</a></p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
