@* Views/Sell/SellSamsung.cshtml *@
@{
    ViewData["Title"] = "Sell My Samsung Galaxy - Like Zone Mobile Shop";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sell My Samsung Galaxy - Like Zone Mobile Shop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .samsung-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            transition: 0.3s;
            margin-bottom: 15px;
        }
        .samsung-card:hover {
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }
        .samsung-card img {
            max-width: 100px;
            height: auto;
            margin-bottom: 10px;
        }
        .samsung-card h5 {
            font-size: 1rem;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h2 class="text-center">Sell My Samsung Galaxy</h2>
        <p class="text-center">Select your Samsung Galaxy model to sell and get the highest cash offer.</p>

        <!-- Search Bar -->
        <div class="input-group mb-4">
            <input type="text" class="form-control" placeholder="Search your Samsung model..." aria-label="Search Samsung">
            <button class="btn btn-primary" type="button">Search</button>
        </div>

        <div class="text-center mb-3">
            <p>Can’t find your device? <a href="#">Click here</a></p>
        </div>

        <!-- Samsung Models -->
        <div class="row">
            @foreach (var samsung in new string[] {
            "Samsung Galaxy S21 5G", "Samsung Galaxy Note 20 5G", "Samsung Galaxy Z Fold 2 5G",
            "Samsung Galaxy A51", "Samsung Galaxy XCover"
            })
            {
                <div class="col-md-3">
                    <div class="samsung-card">
                        <img src="samsung_logo.png" alt="@samsung">
                        <h5>@samsung</h5>
                        <a href="#" class="btn btn-primary btn-sm">Start Selling</a>
                    </div>
                </div>
            }
        </div>

        <!-- FAQ Section -->
        <div class="mt-5">
            <h3>FAQs & Tips When Selling Your Samsung Galaxy Online</h3>
            <div class="accordion" id="faqAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                            How do I sell my Samsung Galaxy phone online?
                        </button>
                    </h2>
                    <div id="faq1" class="accordion-collapse collapse show">
                        <div class="accordion-body">
                            Selling your Samsung Galaxy online is easy! Select your model, get an instant quote, package it securely, and ship it for free. Your payment will be processed quickly.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                            What model of Samsung Galaxy do I have?
                        </button>
                    </h2>
                    <div id="faq2" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            You can check your Samsung model under **Settings > About phone**.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                            How fast do I get paid for my Samsung Galaxy phone?
                        </button>
                    </h2>
                    <div id="faq3" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            Payments are processed within **24-48 hours** after receiving and inspecting your Samsung Galaxy.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                            When should I sell my Samsung Galaxy phone?
                        </button>
                    </h2>
                    <div id="faq4" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            It's best to sell your Samsung Galaxy **before a new model launches** to get the highest value.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq5">
                            Can I sell Samsung Galaxy phones in bulk?
                        </button>
                    </h2>
                    <div id="faq5" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            Yes! We accept bulk sales of Samsung Galaxy devices. Contact us for special pricing and processing.
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Support -->
        <div class="text-center mt-4">
            <p>Still have questions? <a href="#">Contact Support</a></p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
