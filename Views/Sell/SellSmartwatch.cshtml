@* Views/Sell/SellSmartwatch.cshtml *@
@{
    ViewData["Title"] = "Sell My Smartwatch - Like Zone Mobile Shop";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sell My Smartwatch - Like Zone Mobile Shop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .smartwatch-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            transition: 0.3s;
            margin-bottom: 15px;
        }
        .smartwatch-card:hover {
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }
        .smartwatch-card img {
            max-width: 100px;
            height: auto;
            margin-bottom: 10px;
        }
        .smartwatch-card h5 {
            font-size: 1rem;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h2 class="text-center">Sell My Smartwatch</h2>
        <p class="text-center">Select your smartwatch model to sell and get the highest cash offer.</p>

        <!-- Search Bar -->
        <div class="input-group mb-4">
            <input type="text" class="form-control" placeholder="Search your smartwatch model..." aria-label="Search Smartwatch">
            <button class="btn btn-primary" type="button">Search</button>
        </div>

        <div class="text-center mb-3">
            <p>Can’t find your device? <a href="#">Click here</a></p>
        </div>

        <!-- Smartwatch Models -->
        <div class="row">
            @foreach (var smartwatch in new string[] { "Apple Watch", "Samsung Galaxy Watch", "Google Pixel Watch" })
            {
                <div class="col-md-4">
                    <div class="smartwatch-card">
                        <img src="smartwatch_logo.png" alt="@smartwatch">
                        <h5>@smartwatch</h5>
                        <a href="#" class="btn btn-primary btn-sm">Start Selling</a>
                    </div>
                </div>
            }
        </div>

        <!-- FAQ Section -->
        <div class="mt-5">
            <h3>FAQs & Tips When Selling Your Smartwatch Online</h3>
            <div class="accordion" id="faqAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                            How do I sell my smartwatch online?
                        </button>
                    </h2>
                    <div id="faq1" class="accordion-collapse collapse show">
                        <div class="accordion-body">
                            Selling your smartwatch online is simple! Select your model, get an instant quote, package it securely, and ship it for free. Your payment will be processed quickly.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                            What smartwatch do I have?
                        </button>
                    </h2>
                    <div id="faq2" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            You can check your smartwatch model in the device settings or on the back of the watch.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                            Can I send a device to recycle?
                        </button>
                    </h2>
                    <div id="faq3" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            Yes! We offer a recycling option for smartwatches that are no longer functional.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                            Can I get a higher offer if I include accessories?
                        </button>
                    </h2>
                    <div id="faq4" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            Including accessories like original chargers and bands may increase the value of your smartwatch.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq5">
                            Can I sell smartwatches in bulk?
                        </button>
                    </h2>
                    <div id="faq5" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            Yes! We accept bulk sales of smartwatches. Contact us for special pricing and processing.
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Support -->
        <div class="text-center mt-4">
            <p>Still have questions? <a href="#">Contact Support</a></p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>