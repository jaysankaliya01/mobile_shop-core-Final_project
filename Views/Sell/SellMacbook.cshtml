@* Views/Sell/SellMacBook.cshtml *@
@{
    ViewData["Title"] = "Sell My MacBook - Like Zone Mobile Shop";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sell My MacBook - Like Zone Mobile Shop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .macbook-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            transition: 0.3s;
            margin-bottom: 15px;
        }
        .macbook-card:hover {
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }
        .macbook-card img {
            max-width: 100px;
            height: auto;
            margin-bottom: 10px;
        }
        .macbook-card h5 {
            font-size: 1rem;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h2 class="text-center">Sell My MacBook</h2>
        <p class="text-center">Select your MacBook to sell and get the highest cash offer.</p>

        <div class="text-center mb-3">
            <p>Can’t find your device? <a href="#">Click here</a></p>
        </div>

        <!-- MacBook Models -->
        <div class="row">
            @foreach (var macbook in new string[] { "MacBook Pro", "MacBook Air", "MacBook" })
            {
                <div class="col-md-4">
                    <div class="macbook-card">
                        <img src="macbook_logo.png" alt="@macbook">
                        <h5>Sell @macbook</h5>
                        <a href="#" class="btn btn-primary btn-sm">Start Selling</a>
                    </div>
                </div>
            }
        </div>

        <!-- FAQ Section -->
        <div class="mt-5">
            <h3>FAQs & Tips When Selling Your MacBook Online</h3>
            <div class="accordion" id="faqAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                            How can I sell MacBooks online?
                        </button>
                    </h2>
                    <div id="faq1" class="accordion-collapse collapse show">
                        <div class="accordion-body">
                            Selling or trading in MacBooks online with SmartphonesPLUS is easy and takes just a few minutes. Simply select your MacBook’s model and get an instant quote. Then, package your device and ship it to us for free. We’ll send your payout to your selected payment method.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                            What MacBook model do I have?
                        </button>
                    </h2>
                    <div id="faq2" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            You can check your MacBook model by clicking **Apple menu > About This Mac**.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                            How fast do I get paid for my MacBook?
                        </button>
                    </h2>
                    <div id="faq3" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            Payments are processed within **24-48 hours** after receiving and inspecting your MacBook.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                            When should I sell my MacBook?
                        </button>
                    </h2>
                    <div id="faq4" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            It's best to sell your MacBook **before a new model launches** to get the highest value.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq5">
                            Why should I trust SmartphonesPLUS when selling my MacBook?
                        </button>
                    </h2>
                    <div id="faq5" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            SmartphonesPLUS offers competitive pricing, free shipping, and fast payments to ensure a smooth selling experience.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq6">
                            Do I need to include the charger when selling my MacBook?
                        </button>
                    </h2>
                    <div id="faq6" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            No, you are not required to include the charger, but doing so may increase the offer amount.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq7">
                            How do I prepare my MacBook for sale?
                        </button>
                    </h2>
                    <div id="faq7" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            Backup your data, sign out of iCloud, and reset your MacBook to factory settings before selling it.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq8">
                            Can I sell MacBooks in bulk?
                        </button>
                    </h2>
                    <div id="faq8" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            Yes! We accept bulk sales of MacBooks. Contact us for special pricing and processing.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>