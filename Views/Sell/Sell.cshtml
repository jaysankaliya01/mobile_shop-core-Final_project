@{
    ViewData["Title"] = "Sell Used Phones Online - Like Zone Mobile Shop";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sell Used Phones Online - Like Zone Mobile Shop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .category-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            transition: 0.3s;
        }
        .category-card:hover {
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }
        .category-card img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }
        .category-card h5 {
            font-size: 1.2rem;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h2 class="text-center">Sell Used Phones Online for Cash!</h2>
        <p class="text-center">Find the device you’d like to trade in and get instant cash offers.</p>

        <!-- Search Bar -->
        <div class="input-group mb-4">
            <input type="text" class="form-control" placeholder="Search devices..." aria-label="Search devices">
            <button class="btn btn-primary" type="button">Search</button>
        </div>

        <!-- Category Selection -->
        <div class="row">
            <div class="col-md-4">
                <div class="category-card">
                    <img src="sell_iphone.jpg" alt="Sell iPhone">
                    <h5>Sell iPhone</h5>
                    <a href="#" class="btn btn-primary">Sell Now</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="category-card">
                    <img src="sell_samsung.jpg" alt="Sell Samsung">
                    <h5>Sell Samsung</h5>
                    <a href="#" class="btn btn-primary">Sell Now</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="category-card">
                    <img src="sell_android.jpg" alt="Sell Android Smartphone">
                    <h5>Sell Android</h5>
                    <a href="#" class="btn btn-primary">Sell Now</a>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-4">
                <div class="category-card">
                    <img src="sell_smartwatch.jpg" alt="Sell Smartwatch">
                    <h5>Sell Smartwatch</h5>
                    <a href="#" class="btn btn-primary">Sell Now</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="category-card">
                    <img src="sell_tablet.jpg" alt="Sell iPad / Tablet">
                    <h5>Sell iPad / Tablet</h5>
                    <a href="#" class="btn btn-primary">Sell Now</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="category-card">
                    <img src="sell_macbook.jpg" alt="Sell MacBook">
                    <h5>Sell MacBook</h5>
                    <a href="#" class="btn btn-primary">Sell Now</a>
                </div>
            </div>
        </div>

        <!-- Can't Find Your Device -->
        <div class="text-center mt-4">
            <p>Can’t find your device? <a href="#">Click here</a></p>
        </div>

        <!-- FAQ Section -->
        <div class="mt-5">
            <h3>FAQs & Tips For Trading In Your Electronics Online</h3>
            <div class="accordion" id="faqAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                            How do I sell my phone online?
                        </button>
                    </h2>
                    <div id="faq1" class="accordion-collapse collapse show">
                        <div class="accordion-body">
                            Selling your phone online is easy! Select your phone model, get an instant quote, package it, and ship it for free. Get paid via your selected payment method.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                            How long does it take to get paid?
                        </button>
                    </h2>
                    <div id="faq2" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            You will receive payment within 2-5 business days after we receive and inspect your device.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                            Can I sell a broken phone?
                        </button>
                    </h2>
                    <div id="faq3" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            Yes! We accept broken phones, though the offer price may vary based on the condition.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                            Will my personal data be erased?
                        </button>
                    </h2>
                    <div id="faq4" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            Yes! Before selling, we recommend you factory reset your device. We also ensure data removal upon receipt.
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Support -->
        <div class="text-center mt-4">
            <p>Still have questions? <a href="#">Contact Support</a></p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
