@* Views/Sell/SellAndroid.cshtml *@
@{
    ViewData["Title"] = "Sell My Android Phone - Like Zone Mobile Shop";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sell My Android Phone - Like Zone Mobile Shop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .brand-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            transition: 0.3s;
            margin-bottom: 15px;
        }
        .brand-card:hover {
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }
        .brand-card img {
            max-width: 100px;
            height: auto;
            margin-bottom: 10px;
        }
        .brand-card h5 {
            font-size: 1rem;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h2 class="text-center">Sell My Android Phone</h2>
        <p class="text-center">Select your Android smartphone to sell and get instant cash offers.</p>

        <!-- Search Bar -->
        <div class="input-group mb-4">
            <input type="text" class="form-control" placeholder="Search your Android device..." aria-label="Search devices">
            <button class="btn btn-primary" type="button">Search</button>
        </div>

        <div class="text-center mb-3">
            <p>Can’t find your device? <a href="#">Click here</a></p>
        </div>

        <!-- Android Brands -->
        <div class="row">
            @foreach (var brand in new string[] {
            "Google Pixel", "Motorola", "OnePlus", "LG", "Microsoft", "Sony", "Essential", "CAT",
            "Blackberry", "HTC", "Nothing Phone", "Nokia", "Huawei", "Xiaomi", "ZTE", "Revvl", "BLU",
            "TCL", "Kyocera", "Oppo", "Razer", "Asus", "Sonim", "vivo", "Alcatel", "Samsung"
            })
            {
                <div class="col-md-3">
                    <div class="brand-card">
                        <img src="android_logo.png" alt="@brand">
                        <h5>@brand</h5>
                        <a href="#" class="btn btn-primary btn-sm">Sell Now</a>
                    </div>
                </div>
            }
        </div>

        <!-- FAQ Section -->
        <div class="mt-5">
            <h3>FAQs & Tips When Selling Your Android Phone Online</h3>
            <div class="accordion" id="faqAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                            How do I sell my Android phone online?
                        </button>
                    </h2>
                    <div id="faq1" class="accordion-collapse collapse show">
                        <div class="accordion-body">
                            Selling your Android phone online is easy! Select your Android’s brand and model, get an instant quote, package it securely, and ship it for free. You’ll receive your payout via your selected payment method.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                            What model of Android phone do I have?
                        </button>
                    </h2>
                    <div id="faq2" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            You can check your Android model in **Settings > About Phone** or by looking at the label on the box or inside the SIM tray.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                            Can I sell Android phones in bulk?
                        </button>
                    </h2>
                    <div id="faq3" class="accordion-collapse collapse">
                        <div class="accordion-body">
                            Yes! We accept bulk sales for Android devices. Contact us for special pricing on bulk orders.
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Support -->
        <div class="text-center mt-4">
            <p>Still have questions? <a href="#">Contact Support</a></p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
