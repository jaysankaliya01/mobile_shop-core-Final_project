@{
    ViewData["Title"] = "Buy Android - Like Zone Mobile Shop";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buy Android - Like Zone Mobile Shop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .product-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            transition: 0.3s;
        }
        .product-card:hover {
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }
        .product-card img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }
        .product-card h5 {
            font-size: 1.2rem;
            margin: 10px 0;
        }
        .price {
            color: red;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h2 class="text-center">Buy Android</h2>
        <p class="text-center">Get top-tier Android smartphones at unbeatable prices. Each device is tested, certified, and optimized for a smooth performance.</p>

        <div class="row">
            <div class="col-md-4">
                <div class="product-card">
                    <img src="pixel_7.jpg" alt="Google Pixel 7 Pro">
                    <h5>Google Pixel 7 Pro (Unlocked)</h5>
                    <p class="price">From $799.95 <del>$999.95</del></p>
                    <a href="#" class="btn btn-primary">Buy Now</a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="product-card">
                    <img src="oneplus_11.jpg" alt="OnePlus 11">
                    <h5>OnePlus 11 5G (Unlocked)</h5>
                    <p class="price">From $649.95 <del>$799.95</del></p>
                    <a href="#" class="btn btn-primary">Buy Now</a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="product-card">
                    <img src="xiaomi_13.jpg" alt="Xiaomi 13 Pro">
                    <h5>Xiaomi 13 Pro (Unlocked)</h5>
                    <p class="price">From $749.95 <del>$899.95</del></p>
                    <a href="#" class="btn btn-primary">Buy Now</a>
                </div>
            </div>
        </div>

        <!-- Pagination with ASP.NET Core Routing -->
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item"><a class="page-link" asp-controller="Buy" asp-action="BuyIphone">1</a></li>
                <li class="page-item"><a class="page-link" asp-controller="Buy" asp-action="BuySamsung">2</a></li>
                <li class="page-item active"><a class="page-link" asp-controller="Buy" asp-action="BuyAndroid">3</a></li>
                <li class="page-item"><a class="page-link" asp-controller="Buy" asp-action="BuyIpad">4</a></li>
                <li class="page-item"><a class="page-link" asp-controller="Buy" asp-action="BuySmartwatch">5</a></li>
                <li class="page-item"><a class="page-link" asp-controller="Buy" asp-action="BuyMacbook">6</a></li>
                <li class="page-item"><a class="page-link" asp-controller="Buy" asp-action="BuyAccessroies">7</a></li>
                <li class="page-item"><a class="page-link" asp-controller="Buy" asp-action="Clearance">8</a></li>
            </ul>
        </nav>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
