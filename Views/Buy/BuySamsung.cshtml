                    <h3>Samsung Galaxy A54</h3>
                    <p class="price">From <span>$449.99</span></p>
                    <button>Buy Now</button>
                </div>
            </div>
        </main>
    </div>

    <script>
        function filterProducts() {
            let checkboxes = document.querySelectorAll("input[name='filter']:checked");
            let selected = Array.from(checkboxes).map(cb => cb.value);
            let products = document.querySelectorAll(".product");
            
            products.forEach(product => {
                if (selected.length === 0 || selected.includes(product.getAttribute("data-name"))) {
                    product.style.display = "block";
                } else {
                    product.style.display = "none";
                }
            });
        }
    </script>
</body>
</html>
