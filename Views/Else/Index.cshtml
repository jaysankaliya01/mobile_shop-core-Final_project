@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Phone Selling</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        /* General Styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #fff;
            color: #333;
            margin: 0;
            padding: 0;
        }

        /* Top Bar */
        .top-bar {
            background-color: #ff9800;
            color: white;
            text-align: center;
            padding: 10px;
        }

        /* Hero Section */
        .hero {
            text-align: center;
            padding: 40px 20px;
        }

        .hero-container {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .hero-box {
            width: 250px;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            color: white;
        }

            .hero-box.buy {
                background-color: #1E88E5;
            }

            .hero-box.sell {
                background-color: #ff5722;
            }

            .hero-box button {
                background-color: white;
                color: black;
                padding: 10px;
                border: none;
                cursor: pointer;
                border-radius: 5px;
            }

        /* Trade-in Section */
        .trade-in {
            text-align: center;
            padding: 40px 20px;
        }

        .trade-container {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }

        .filters, .popular {
            width: 45%;
        }

            .filters ul {
                list-style: none;
                padding: 0;
            }

            .filters li {
                margin: 5px 0;
            }

        .product {
            background: white;
            padding: 15px;
            border: 1px solid #ff9800;
            border-radius: 8px;
            text-align: center;
        }

            .product img {
                max-width: 100px;
            }

            .product button {
                background-color: #ff9800;
                color: white;
                border: none;
                padding: 8px;
                cursor: pointer;
                border-radius: 5px;
            }

        /* Refurbished Phones Section */
        .refurbished {
            text-align: center;
            padding: 40px 20px;
            background-color: #f9f9f9;
        }

        .shop-categories {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .category {
            background: #ff9800;
            padding: 10px 20px;
            color: white;
            border-radius: 5px;
            cursor: pointer;
        }

        /* FAQ Section */
        .faq {
            padding: 40px 20px;
        }

        .faq-item {
            background: #fff;
            padding: 15px;
            border-left: 4px solid #ff9800;
            margin-bottom: 10px;
        }

        .highlight {
            color: #ff5722;
            font-weight: bold;
        }

    </style>
</head>
<body>

    <!-- Top Navigation -->
    <header>
        <div class="top-bar">
            <p>📱 Certified Refurbished | 🔥 Higher Offers | ⭐ Premium Picks | ⚡ Best Returns</p>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <h1>Buying and Selling Phones Online Has Never Been So Easy</h1>
        <div class="hero-container">
            <div class="hero-box buy">
                <h2>Buy</h2>
                <p>Certified Pre-owned Devices</p>
                <button>Browse Phones</button>
            </div>
            <div class="hero-box sell">
                <h2>Sell</h2>
                <p>Trade Your Device for Cash</p>
                <button>Start Selling</button>
            </div>
        </div>
    </section>

    <!-- Trade-in Section -->
    <section class="trade-in">
        <h2>Sell Your Phone for Cash <span class="highlight">In Minutes</span></h2>
        <p>Trade-in your old phone easily and get cash instantly.</p>

        <div class="trade-container">
            <div class="filters">
                <h3>Sell by Device Type</h3>
                <ul>
                    <li><input type="checkbox"> iPhone</li>
                    <li><input type="checkbox"> Android</li>
                    <li><input type="checkbox"> Tablets</li>
                    <li><input type="checkbox"> Smartwatches</li>
                    <li><input type="checkbox"> More...</li>
                </ul>
            </div>
            <div class="popular">
                <h3>Most Popular Trade-Ins</h3>
                <div class="product">
                    <img src="iphone.png" alt="iPhone 13 Pro">
                    <p>Up to $579</p>
                    <button>Sell Now</button>
                </div>
                <div class="product">
                    <img src="iphone.png" alt="iPhone X">
                    <p>Up to $220</p>
                    <button>Sell Now</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Refurbished Phones Section -->
    <section class="refurbished">
        <h2>Buy Certified <span class="highlight">Refurbished Phones</span></h2>
        <div class="shop-categories">
            <div class="category">Shop iPhones</div>
            <div class="category">Shop Smartwatches</div>
            <div class="category">Shop All Devices</div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq">
        <h2>Frequently <span class="highlight">Asked Questions</span></h2>
        <div class="faq-item">
            <h3>📌 How does the trade-in process work?</h3>
            <p>Simply select your device, answer a few questions, and get a quote instantly.</p>
        </div>
        <div class="faq-item">
            <h3>📌 How do you determine the value of my device?</h3>
            <p>The value is based on the model, condition, and market demand.</p>
        </div>
    </section>

</body>
</html>

